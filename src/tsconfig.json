{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,

    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },

    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
